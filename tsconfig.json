{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "outDir": "./dist",
        "target": "es5",
        "baseUrl": ".",
        "allowJs": true,
        "paths": {
            "~/*": [
                "./src/*"
            ]
        },
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}